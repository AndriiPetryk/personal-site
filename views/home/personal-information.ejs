<%- include('../includes/head.ejs') %>

<body id="page-top">

<%- include('./nav.ejs') %>


<div class="container-fluid p-0">
    <section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="about">
        <div class="w-100">
            <% if (aboutData.length > 0) { %>
                <% aboutData.forEach(details => { %>
                    <h1 class="mb-0"><%= details.name %>
                        <span class="text-primary"><%= details.secondName %></span>
                    </h1>
                    <div class="subheading mb-5"><%= details.info %>
                        <a href="mailto:<%= details.email %>"><%= details.email %></a>
                    </div>
                    <p class="lead mb-5"><%= details.description %></p>
                    <div class="social-icons">
                        <a href="https://www.linkedin.com/in/andriipetryk/" target="_blank">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="https://github.com/AndriiPetryk" target="_blank">
                            <i class="fab fa-github"></i>
                        </a>
                        <a href="https://www.facebook.com/dusicheg" target="_blank">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <h1>No Data for displaying</h1>
            <% } %>
        </div>
    </section>

    <hr class="m-0">

</div>

<%- include('./footer.ejs') %>

</body>

</html>



